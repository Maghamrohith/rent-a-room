<!DOCTYPE html>
<html>
<head>
  <title>RentARoom</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


       
       <% if user_signed_in? %>
       <%= current_user.username %>
       <%= link_to"AccountSetting",edit_user_registration_path %>
       <%= link_to"logout",destroy_user_session_path, method: :delete %>
       <%= link_to "cities", cities_path %>
       <%= link_to "rooms", rooms_path %>
       <% if current_user.role?("admin")%>
       <%= link_to "unauthorized_rooms", rooms_unauthorize_path %>
       <% end %>
      

       <% else %>

       <%= link_to"login",new_user_session_path %> | <%= link_to "Register",new_user_registration_path %>
       <% end %>
       
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
       <%= yield %>


</body>
</html>
